name = "allowanceapi-proxy"
main = "src/index.ts"
compatibility_date = "2025-01-10"

[vars]
OPENAI_API_BASE = "https://api.openai.com"
SUPABASE_URL = "https://YOUR_PROJECT.supabase.co"
SUPABASE_SERVICE_ROLE_KEY = "YOUR_SUPABASE_SERVICE_ROLE_KEY"
UPSTASH_REDIS_REST_URL = "https://YOUR_UPSTASH_REDIS_REST_URL"
UPSTASH_REDIS_REST_TOKEN = "YOUR_UPSTASH_REDIS_REST_TOKEN"
SERVER_ENCRYPTION_KEY_B64 = "BASE64_32_BYTES"
ALLOWANCE_KEY_PEPPER = "RANDOM_LONG_SECRET"

# Optional: set to "1" to enable request logging (beware PII)
LOG_REQUESTS = "0"
